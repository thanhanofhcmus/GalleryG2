<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="gnine_ImageViewWidgetIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="gnine_WrapperIconState">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
<!--        <item name="android:background">?attr/selectableItemBackground</item>-->
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="gnine_WrapperRotateButton">
        <item name="android:layout_width">@dimen/gnine_size_wrapper_rotate_button</item>
        <item name="android:layout_height">@dimen/gnine_size_wrapper_rotate_button</item>
<!--        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:clickable">true</item>
    </style>

    <style name="gnine_TextViewCropAspectRatio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/gnine_height_crop_aspect_ratio_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textColor">@color/crop_scale_text_view_selector</item>
    </style>

    <style name="gnine_TextViewWidgetText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gnine_color_widget_text</item>
        <item name="android:layout_marginTop">@dimen/gnine_margin_top_widget_text</item>
        <item name="android:textSize">@dimen/gnine_text_size_widget_text</item>
    </style>

    <style name="gnine_TextViewWidget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/gnine_margin_top_controls_text</item>
        <item name="android:textColor">@color/gnine_color_widget_active</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/gnine_text_size_controls_text</item>
    </style>

</resources>