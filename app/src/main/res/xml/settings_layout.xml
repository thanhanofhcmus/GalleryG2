<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory
        app:title="Theme">
        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:icon="@drawable/ic_dark_light_mode"
            app:title="Dark mode"
            app:summary="Toggle dark mode" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="About" >

        <Preference
            android:key="app_version"
            android:title="Version"
            app:icon="@drawable/ic_info"
            android:summary="1.0.0"/>

        <Preference
            app:title="Developer"
            app:icon="@drawable/ic_about"
            app:summary="Something" />

    </PreferenceCategory>

</PreferenceScreen>