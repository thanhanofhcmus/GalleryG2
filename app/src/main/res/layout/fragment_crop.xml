<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CropFragment">

    <ImageView
        android:id="@+id/singleImage_crop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/crop_1_1_Btn"/>
    <Button
        android:id="@+id/crop_1_1_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crop_1_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/crop_3_4_Btn"/>

    <Button
        android:id="@+id/crop_3_4_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crop_3_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/crop_9_16_Btn"
        app:layout_constraintLeft_toRightOf="@+id/crop_1_1_Btn"/>
    <Button
        android:id="@+id/crop_9_16_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crop_9_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/crop_free_Btn"
        app:layout_constraintLeft_toRightOf="@+id/crop_3_4_Btn"/>
    <Button
        android:id="@+id/crop_free_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crop_free"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/crop_9_16_Btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>